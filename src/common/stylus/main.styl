.inp-wrap
    text-align left
    position relative
    .inp-radius
        border-radius 4px
    .inp
        border: 1px solid #ccc;
        width 100%
        height: 34px;
        position: absolute;
        top: 0px;
        left: 0px;
        padding-left: 12px;
        input
            line-height 34px
            outline none
            float left
        .custom-select
            cursor pointer
            float left
            width 100%
            line-height 40px
            .iconfont
                position absolute
                right 7px
                font-size 14px
                font-weight bold
                top -3px
        .custom-ul
            top 34px
            left -1px
            width 100%
            z-index 99
            border 1px solid #ccc
            position absolute
            max-height 130px
            overflow-y scroll
            .custom-item
                padding-left 12px
                line-height 26px
                background #fff
                &:hover
                    cursor pointer
                    background #ccc
    .checkbox, .radio
        display inline-block
        position relative
        cursor pointer
        margin-right 20px
        .r-label, .c-label
            position relative
            padding 0 25px
            color #000
            font-size 12px
            font-weight bold
            background #ccc
            border-radius 5px
            line-height 23px
            display inline-block
            cursor pointer
            .iconfont
                position absolute
                top 2px
                right 4px
                color #3F51B5
        input[type=radio], input[type=checkbox]
            position relative
            z-index 89
            float left
            cursor pointer
            height 18px
            width 18px
            opacity 0
    .checkbox
        .checked::after
            content '✔'
            top -1px
            left 1px
            font-size 16px
            font-weight bold
    .radio
        .checked
            color #fff
            background #ea5c2f

.switch
    display block
    position relative
    text-align left
    .iconfont
        font-size 28px
        position absolute
        color #999
        line-height 23px
        margin 22px 0
    .icon-switch-off
        font-size 25px !important

.btn-step
    display inline-block
    margin 0px auto 50px
    width 140px
    line-height 32px
    border-radius 3px
    color #fff
    background linear-gradient(#4392db, #1d6ebe)
    box-shadow inset 0 0px 2px 0px #8ec6f7
    border 1px solid #3984ce
    border-bottom 1px solid #0e65bc

.btn-active
    position relative

/* 通用table样式 */
.custom-tab
    width 100%
    background #fff
    margin 0 auto
    table-layout fixed
    th
        background #ccc
        font-size 14px
        font-weight bold
        color #333
        line-height 40px
        border-right 1px solid #ccc
    tbody
        tr
            cursor pointer
            height 44px
            &:nth-child(odd)
                background #eaeaea
            &:hover
                background #ddd !important
    td
        color #666
        font-size 14px
        line-height 44px
        height 44px
        padding 0 6px
        border-left 1px solid #ccc
        border-bottom 1px solid #ccc
        &:last-child
            border-right 1px solid #ccc
        .ctn
            display block
            overflow hidden
            white-space: nowrap
            text-overflow ellipsis
    .on
        background greenyellow
    .col-sort
        position relative
        cursor pointer
        .iconfont
            color #666
            position absolute
            top 0
            right 10px
.custom-tab.lucency
    background rgba(255, 255, 255, 0.69)
    th
        background rgba(179, 179, 179, 0.69)
    tbody
        tr
            cursor default
            height 44px
            .opr-item
                cursor pointer
                display inline-block
                font-style normal
                padding 0 5px
                &:hover
                    .iconfont
                        color #de6d49
            .opr-item.position
                .iconfont
                    color #de6d49
                &:hover
                    .iconfont
                        color #de6d49
            &:nth-child(odd)
                background rgba(234, 234, 234, 0.68)
            &:hover
                background rgba(221, 221, 221, 0.72) !important;
.custom-tab.tab-small
    tr
        height 32px
        td
            line-height 32px
            height 32px

.important
    .iconfont
        color #dc3131
        font-size 14px
        margin-right 5px
.view-tab
    width 90%
    margin 20px auto
    border 5px solid #fff1e5
    text-align left
    tr
        color #4c4c4c
        font-size 14px
        th
            line-height 40px
            height 40px
            font-weight bold
            padding-left 26px
            border-right 1px dashed #ccc
            border-bottom 1px dashed #ccc
        th.border-sy
            border-left 1px dashed #ccc
        td
            line-height 40px
            padding-left 26px
            border-bottom 1px dashed #ccc



/* 通用transition */
.common-enter-active, .common-leave-active
    transition: opacity 1s
.common-enter, .common-leave-to
    opacity: 0